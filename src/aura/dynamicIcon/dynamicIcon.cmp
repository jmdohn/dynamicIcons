<aura:component >
    <aura:attribute name="iconType" type="string" required="true" description="This is the type of icon that should be rendered." />
    <aura:attribute name="description" type="string" default="" description="This is the description of the icon." />
    <aura:attribute name="spanClass" type="string" default="" description="This is the override for the span class." />
    <aura:attribute name="class" type="string" default="" description="This is the class to override the icon." />
    <aura:attribute name="assistiveText" type="string" description="This is assistive text that can be used if needed." />
    <aura:attribute name="strengthLevel" type="string" description="This is the strength level for the strength icons." />
    
    <!-- Trend Icons -->
    <aura:if isTrue="{!v.iconType == 'trendDown'}">
        <span data-slds-trend="down" class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-trend slds-is-animated'}" title="{!v.description}">
            <c:svg viewbox="0 0 16 16" childItems="[{'path' : {'class' : 'slds-icon-trend__arrow', 'd':'M.75 8H11M8 4.5L11.5 8 8 11.5'}}, 
                                                   {'circle' : {'class' :'slds-icon-trend__circle', 'cy' : '8', 'cx' : '8', 'r' : '7.375', 'transform' : 'rotate(-28 8 8) scale(-1 1) translate(-16 0)'}}]">
            </c:svg>
        </span>
    </aura:if>
    
    <aura:if isTrue="{!v.iconType == 'trendUp'}">
        <span data-slds-trend="up" class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-trend slds-is-animated'}" title="{!v.description}">
            <c:svg viewbox="0 0 16 16" childItems="[{'path' : {'class' : 'slds-icon-trend__arrow', 'd':'M.75 8H11M8 4.5L11.5 8 8 11.5'}}, 
                                                   {'circle' : {'class' :'slds-icon-trend__circle', 'cy' : '8', 'cx' : '8', 'r' : '7.375', 'transform' : 'rotate(-28 8 8) scale(-1 1) translate(-16 0)'}}]">
            </c:svg>
        </span>
    </aura:if>
    
    <aura:if isTrue="{!v.iconType == 'trend'}">
        <span data-slds-trend="neutral" class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-trend slds-is-animated'}" title="{!v.description}">
            <c:svg viewbox="0 0 16 16" childItems="[{'path' : {'class' : 'slds-icon-trend__arrow', 'd':'M.75 8H11M8 4.5L11.5 8 8 11.5'}}, 
                                                   {'circle' : {'class' :'slds-icon-trend__circle', 'cy' : '8', 'cx' : '8', 'r' : '7.375', 'transform' : 'rotate(-28 8 8) scale(-1 1) translate(-16 0)'}}]">
            </c:svg>
        </span>
    </aura:if>
    
    <!-- Ellie -->
     <aura:if isTrue="{!v.iconType == 'ellie'}">
