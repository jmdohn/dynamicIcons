            </c:svg>
        </span>
    </aura:if>
    
    <!-- eq -->
    <aura:if isTrue="{!v.iconType == 'eq'}">
        <div class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-eq slds-is-animated'}" title="{!v.description}">
            <div class="slds-icon-eq__bar"></div>
            <div class="slds-icon-eq__bar"></div>
            <div class="slds-icon-eq__bar"></div>
        </div>
        <span class="slds-assistive-text">{!v.assistiveText}</span>
    </aura:if>
    
    <!-- Scores -->
    <aura:if isTrue="{!v.iconType == 'positive' || v.iconType == 'negative'}">
        <span data-slds-state="{!v.iconType}" class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-score'}" title="{!v.description}">
            <c:svg viewbox="0 0 5 5" class="slds-icon-score__positive" childItems="[{'circle' : {'cy' : '50%', 'cx' : '50%', 'r' : '1.875'}}]">
            </c:svg>
            <c:svg viewbox="0 0 5 5" class="slds-icon-score__negative" childItems="[{'circle' : {'cy' : '50%', 'cx' : '50%', 'r' : '1.875'}}]">
            </c:svg>
            <span class="slds-assistive-text">{!v.assistiveText}</span>
        </span>
    </aura:if>

     <!-- Strength -->
    <aura:if isTrue="{!v.iconType == 'strength'}">
        <span data-slds-strength="{!v.strengthLevel}" class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-strength'}" title="{!v.description}">
            <c:svg viewbox="0 0 27 7" childItems="[{'circle' : {'cx' : '3.5', 'cy' : '3.5', 'r' : '3.025'}}, 
                                                   {'circle' : {'cx' : '13.5', 'cy' : '3.5', 'r' : '3.025'}}, 
                                                   {'circle' : {'cx' : '23.5', 'cy' : '3.5', 'r' : '3.025'}}]">
            </c:svg>
            <span class="slds-assistive-text">{!v.assistiveText}</span>
        </span>
    </aura:if>
    
    
    <!-- Waffle -->
    <aura:if isTrue="{!v.iconType == 'waffle'}">
        <button class="slds-button slds-icon-waffle_container" title="{!v.description}">
            <span class="{!v.spanClass != '' ? v.spanClass : 'slds-icon-waffle'}">
                <span class="slds-r1"></span>
                <span class="slds-r2"></span>
                <span class="slds-r3"></span>
                <span class="slds-r4"></span>
                <span class="slds-r5"></span>
                <span class="slds-r6"></span>
                <span class="slds-r7"></span>
                <span class="slds-r8"></span>
                <span class="slds-r9"></span>
            </span>
            <span class="slds-assistive-text">{!v.assistiveText}</span>
        </button>
    </aura:if>
</aura:component>